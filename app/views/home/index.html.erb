<h2>前台首頁</h2>

<% if user_signed_in? %>
  <p><%= link_to '會員專區', user_index_path %></p>
<% end %>
<p><%= link_to '預約飯店', hotels_path %></p>

<h2>搜尋房間</h2>
<%= form_for @search, url: '/search' do |f| %>
  <%= f.label :begin_date, '住宿日' %>
  <%= f.date_field :begin_date %>
  ~
  <%= f.date_field :end_date %>
  <%= f.label :person_count, '入住人數' %>
  <%= f.number_field :person_count, value: 1 %>
  <%= f.select :room_type, options_for_select(RoomType.room_types.map{ |key, value| [RoomType.room_types[key], RoomType.room_types.key(value)]}, RoomType.room_types) %>
  <%= f.submit '搜尋', disable_with: '搜尋中...' %>
  <!-- form_for @object, html: { multipart: true }, do |f| -->
  <!-- form_for @object, html: { class: "classname" }, do |f| -->
<% end %>